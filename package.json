{
  "name": "bashaway-backend",
  "version": "1.0.0",
  "description": "Backend",
  "main": "src/app.js",
  "scripts": {
    "build": "npm run clean && npm run build-babel && npm run copy",
    "build-babel": "babel -d ./dist ./src -s",
    "clean": "rm -rf dist && mkdir dist",
    "copy": "babel src --out-dir ./dist --copy-files",
    "dev": "nodemon --exec babel-node src/app.js",
    "format": "prettier --write --cache \"**/*.{js,md}\"",
    "lint": "eslint src --ext js,md --ignore-path .gitignore --fix --cache --report-unused-disable-directives",
    "prepare": "lefthook install",
    "start": "node dist/app.js",
    "test": "echo test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sliit-foss/bashaway-backend.git"
  },
  "author": "SLIIT FOSS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sliit-foss/bashaway-backend/issues"
  },
  "homepage": "https://github.com/sliit-foss/bashaway-backend#readme",
  "dependencies": {
    "@sliit-foss/functions": "2.2.3",
    "@sliit-foss/http-logger": "1.1.2",
    "@sliit-foss/module-logger": "1.1.5",
    "bcrypt": "5.0.1",
    "celebrate": "15.0.1",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "express": "4.18.1",
    "express-http-context": "1.2.4",
    "express-rate-limit": "6.5.1",
    "handlebars": "4.7.7",
    "helmet": "5.1.0",
    "http-errors": "2.0.0",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.21",
    "migrate-mongo": "9.0.0",
    "mongoose": "6.4.3",
    "mongoose-aggregate-paginate-v2": "1.0.6",
    "mongoose-paginate-v2": "1.7.0",
    "nodemailer": "6.7.7"
  },
  "devDependencies": {
    "@babel/cli": "7.17.10",
    "@babel/core": "7.17.12",
    "@babel/eslint-parser": "7.18.2",
    "@babel/node": "7.18.6",
    "@babel/preset-env": "7.18.6",
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@sliit-foss/eslint-config-internal": "1.1.4",
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "babel-plugin-module-resolver": "5.0.0",
    "dotenv": "16.0.1",
    "eslint": "8.45.0",
    "eslint-plugin-import": "2.27.5",
    "lefthook": "1.4.3",
    "nodemon": "3.0.1",
    "prettier": "2.8.8"
  }
}
